file = open("data.txt")
data = file.read()
words = data.split()

count_o = dict()
    words = str.split()

    for word in words:
        if word in count_o:
            count_o[word] += 1
        else:
            count_o[word] = 1

    return count_o

print(count_o)
print('Number of words in text file :', len(words))
